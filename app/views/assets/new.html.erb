<div class="container">
  <div class="col-md-3">
    <ul class="nav nav-pills nav-stacked">
      <li><%= link_to 'Image&Text', assets_path %></li>
      <li><a href="#">Image</a></li>
      <li><a href="#">Audio</a></li>
      <li><a href="#">Video</a></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="btn-group"> 
      <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
        New
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Single Asset", new_asset_path %></li>
        <li><a href="#">Multiple Assets</a></li>
      </ul>
    </div>
    <div class="main-content">
      <br>
      <%= simple_form_for @image_text, url: assets_path, html: { role: 'form' } do |f| %>
        <%= f.input :title, wrapper_html: { class: "form-group" }, input_html: { class: "form-control" } %>
        <%= f.input :author, wrapper_html: { class: "form-group" }, input_html: { class: "form-control" }%>
        <%= f.input :cover, wrapper_html: { class: "form-group" } %>
        <%= f.input :body, wrapper_html: { class: "form-group" }, input_html: { class: "form-control", rows: "5" } %>
        <%= f.button :submit, value: "submit", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
